<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>

    <style name="toast_sample">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/Green</item>
        <item name="stTextSize">16sp</item>
        <item name="stColorBackground">@color/White</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">@color/Green</item>
        <item name="stLength">LONG</item> LONG or SHORT
        <item name="stGravity">top</item> top or center
        <item name="stRadius">5dp</item>
    </style>

    <style name="toast_alert">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#000</item>
        <item name="stTextSize">15sp</item>
        <item name="stColorBackground">@color/White</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">@color/Red</item>
        <item name="stIconStart">@drawable/alert_icon</item>
        <item name="stLength">LONG</item> LONG or SHORT
        <item name="stGravity">top</item> top or center
        <item name="stRadius">5dp</item>
    </style>

</resources>
